# FreeWorld Job Scraper - Streamlit Secrets Template
# Copy this to secrets.toml and fill in your actual API keys
# DO NOT commit secrets.toml to GitHub!

[secrets]
# OpenAI API
OPENAI_API_KEY = "sk-your-openai-key-here"

# Supabase Database
SUPABASE_URL = "https://your-project.supabase.co"
SUPABASE_ANON_KEY = "your-supabase-anon-key"

# Airtable Integration
AIRTABLE_API_KEY = "your-airtable-key"
AIRTABLE_BASE_ID = "your-base-id"
AIRTABLE_TABLE_ID = "your-table-id"

# Job Scraping
OUTSCRAPER_API_KEY = "your-outscraper-key"

# Webhook Configuration (for Async Google Jobs)
OUTSCRAPER_WEBHOOK_URL = "https://your-webhook-domain.com/webhook/outscraper/job-complete"
OUTSCRAPER_WEBHOOK_SECRET = "your-random-webhook-secret"
WEBHOOK_PORT = "5000"

# Link Shortening
SHORT_IO_API_KEY = "your-shortio-key"

# App Security
APP_PASSWORD = "freeworld2024"

# Streamlit Cache Management (native environment variables)
# These control Streamlit's native caching behavior
STREAMLIT_CACHE_TTL = "3600"  # Default cache TTL in seconds (1 hour)
STREAMLIT_MAX_CACHED_MESSAGE_AGE = "3600"  # Clear old cached messages after 1 hour
STREAMLIT_CACHE_ON_DISK = "false"  # Use memory caching only
STREAMLIT_DEVELOPMENT_MODE = "true"  # Enable faster cache invalidation in development